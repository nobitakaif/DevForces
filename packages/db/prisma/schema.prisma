generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User{
  id          String    @unique   @default(uuid()) @id
}

model Contest{
  id          String    @unique   @default(uuid()) @id
  title       String    
  startTime   DateTime  @default(now())
}

model ContestToChallengeMapping{
  id          String    @unique   @default(uuid()) @id
  contestId   String
  challengeId String
  index       Int
}

model Challenge{
  id          String    @unique   @default(uuid()) @id
  title       String
  notionId    String
  maxPoint    Int
}

model Submission{
  id          String    @unique   @default(uuid()) @id
  challengeId String
}
